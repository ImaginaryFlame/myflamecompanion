{
  "crons": [
    {
      "path": "/api/cron/auto-check",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/sync-channels",
      "schedule": "*/30 * * * *"
    }
  ],
  "functions": {
    "app/api/scraping/**/*.ts": {
      "maxDuration": 300
    },
    "app/api/sync/**/*.ts": {
      "maxDuration": 300
    }
  }
} 